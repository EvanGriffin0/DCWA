<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Grades</title>
  <link rel="stylesheet" href="/students.css">
</head>
<body>
  <h1>Grades</h1>
  <a href="/">Home</a> | <a href="/students">Students</a>
  <table>
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Student Name</th>
        <th>Module ID</th>
        <th>Grade</th>
      </tr>
    </thead>
    <tbody>
      <% grades.forEach(grade => { %>
        <tr>
          <td><%= grade.sid %></td>
          <td><%= grade.student_name %></td>
          <td><%= grade.mid %></td>
          <td><%= grade.grade %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
